<%- include ("partials/header") %>

<div class="container">
    <h1>|My storage</h1>
    <a href="/newitem" class="waves-effect waves-light btn-small margin-bottom10"><i class="material-icons left">add</i>Add new items</a>
    <div class="row">
        <% items.forEach(item => { %>
            <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <span class="new badge orange right" data-badge-caption="<%= item.status %>"></span>
                    <img src="images/office.jpg">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4"><%= item.title %><i
                            class="material-icons right dropdown-trigger" data-target="dropdown1">more_vert</i></span>
                    
                    <!-- Dropdown Structure -->
                    <ul id='dropdown1' class='dropdown-content'>
                        <li><a href="#!">Add to deposit list</a></li>
                        <li class="divider" tabindex="-1"></li>
                        <li><a href="#!">Details</a></li>
                        <li class="divider" tabindex="-1"></li>
                        <li><a href="#!">Edit</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<%- include ("partials/footer") %>